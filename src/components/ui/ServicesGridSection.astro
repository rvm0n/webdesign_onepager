---
import FeatureCard from './FeatureCard.astro';
import BGPattern from './BGPattern.astro';
import AnimatedCTAButton from './AnimatedCTAButton.astro';

const advantages = [
  {
    title: "Automatische Kundengewinnung",
    icon: "BarChart3",
    description: "Ihre Website arbeitet 24/7 und generiert qualifizierte Leads, während Sie sich auf die Beratung konzentrieren.",
  },
  {
    title: "Sofortiger Vertrauensaufbau",
    icon: "Sparkles",
    description: "Eine professionelle Webseite vermittelt direkt Kompetenz und schafft Vertrauen bei potenziellen Kunden.",
  },
  {
    title: "Höhere Sichtbarkeit (SEO)",
    icon: "TrendingUp",
    description: "Werden Sie durch gezielte Suchmachinenoptimierung genau dann gefunden, wenn jemand Ihre Expertise benötigt.",
  },
  {
    title: "Ihr Wettbewerbsvorteil",
    icon: "Target",
    description: "Die erste Anlaufstelle von potenziellen Kunden ist Ihre Webseite - mit einem modernen Onlineauftritt heben Sie sich von Ihrer Konkurrenz ab.",
  },
  {
    title: "Flexibel erweiterbar",
    icon: "Palette",
    description: "Ihre Webseite wächst mit Ihrem Unternehmen - Es können jederzeit neue Funktionen, Seiten oder Inhalte hinzugefügt werden.",
  },
  {
    title: "Langfristige Investition (ROI)",
    icon: "Zap",
    description: "Eine professionelle Website zahlt sich über Jahre aus und wird zu Ihrem stärksten Marketing-Tool.",
  },
];
---

<section id="vorteile" class="relative py-16 md:py-32">
  <BGPattern variant="grid" mask="fade-edges" size={40} fill="rgba(59, 130, 246, 0.03)" />
  <BGPattern variant="vertical-lines" mask="fade-x" size={60} fill="rgba(59, 130, 246, 0.02)" />
  
  <div class="max-w-6xl mx-auto px-4 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-balance mb-4">
        Ihre Vorteile auf <span class="text-primary">einen Blick</span>
      </h2>
      <p class="text-muted-foreground text-lg max-w-3xl mx-auto">
        Mehr Wachstum, mehr Effizienz und mehr Vertrauen durch eine Webseite die Ihrem Unternehmen gerecht wird.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {advantages.map((advantage) => (
        <FeatureCard 
          title={advantage.title}
          icon={advantage.icon}
          description={advantage.description}
        />
      ))}
    </div>
    
    <div class="text-center mt-16">
      <AnimatedCTAButton href="https://cal.com/ramon-melchior/15min">
        Jetzt Termin sichern
      </AnimatedCTAButton>
    </div>
  </div>
</section>