---
import AnimatedCTAButton from './AnimatedCTAButton.astro';

interface Props {
  title?: string;
  subtitle?: {
    regular: string;
    gradient: string;
  };
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  bottomImage?: {
    light: string;
    dark: string;
  };
  gridOptions?: {
    angle?: number;
    cellSize?: number;
    opacity?: number;
    lightLineColor?: string;
    darkLineColor?: string;
  };
  class?: string;
}

const {
  title = "Professionelle Webseiten f체r die Immobilien- , Finanz- und Versicherungsbranche",
  subtitle = {
    regular: "Vertrauen schaffen durch ",
    gradient: "professionelles Webdesign",
  },
  description = "Mehr qualifizierte Leads und abgeschlossene Vertr채ge - durch eine Webseite die Sie und Ihre Kunden 체berzeugt.",
  ctaText = "Kostenloses Erstgespr채ch vereinbaren",
  ctaHref = "https://cal.com/ramon-melchior/15min",
  bottomImage = {
    light: "/financial-dashboard-light.png",
    dark: "/financial-dashboard-dark.png",
  },
  gridOptions = {
    angle: 65,
    cellSize: 60,
    opacity: 0.5,
    lightLineColor: "#0056b3",
    darkLineColor: "#1e90ff",
  },
  class: className,
} = Astro.props;

const gridStyles = {
  "--grid-angle": `${gridOptions.angle}deg`,
  "--cell-size": `${gridOptions.cellSize}px`,
  "--opacity": gridOptions.opacity,
  "--light-line": gridOptions.lightLineColor,
  "--dark-line": gridOptions.darkLineColor,
};
---

<div class={`relative ${className || ''}`}>
  <div class="absolute top-0 z-[0] h-screen w-screen bg-blue-950/10 dark:bg-blue-950/10 bg-[radial-gradient(ellipse_20%_80%_at_50%_-20%,rgba(59,130,246,0.15),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_20%_80%_at_50%_-20%,rgba(59,130,246,0.3),rgba(255,255,255,0))]"></div>
  
  <section class="relative min-h-screen flex items-center justify-center z-1">
    <!-- Enhanced Grid with Falling Dots -->
    <div
      class="pointer-events-none absolute size-full overflow-hidden [perspective:200px] opacity-[var(--opacity)]"
      style={gridStyles}
    >
      <!-- Vertical Grid Lines with Falling Dots -->
      <div class="absolute inset-0 grid-lines">
        {Array.from({ length: 12 }, (_, i) => (
          <div 
            class="vertical-line" 
            style={`left: ${(i + 1) * 8.33}%; animation-delay: ${i * 0.5}s;`}
          >
            <div 
              class="falling-dot"
              style={`animation-duration: ${8 + (i % 4) * 2}s; animation-delay: ${i * 1.2}s;`}
            ></div>
          </div>
        ))}
      </div>
      
      <!-- Original RetroGrid -->
      <div class="absolute inset-0 [transform:rotateX(var(--grid-angle))]">
        <div class="[background-image:linear-gradient(to_right,var(--light-line)_1px,transparent_0),linear-gradient(to_bottom,var(--light-line)_1px,transparent_0)] [background-repeat:repeat] [background-size:var(--cell-size)_var(--cell-size)] [height:300vh] [inset:0%_0px] [margin-left:-200%] [transform-origin:100%_0_0] [width:600vw] dark:[background-image:linear-gradient(to_right,var(--dark-line)_1px,transparent_0),linear-gradient(to_bottom,var(--dark-line)_1px,transparent_0)]"></div>
      </div>
      <div class="absolute inset-0 bg-gradient-to-t from-white to-transparent to-90% dark:from-black"></div>
    </div>

    <div class="max-w-screen-xl z-10 mx-auto px-4 gap-12 md:px-8">
      <div class="space-y-6 max-w-4xl mx-auto text-center">
        <h1 class="text-sm text-gray-600 dark:text-gray-400 group font-geist mx-auto px-5 py-2 bg-gradient-to-tr from-zinc-300/20 via-gray-400/20 to-transparent dark:from-zinc-300/5 dark:via-gray-400/5 border-[2px] border-black/5 dark:border-white/5 rounded-3xl w-fit">
          {title}
          <svg class="inline w-4 h-4 ml-2 group-hover:translate-x-1 duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </h1>
        
        <h2 class="text-3xl sm:text-4xl md:text-6xl tracking-tighter font-geist bg-clip-text text-transparent mx-auto leading-tight bg-[linear-gradient(180deg,_#000_0%,_rgba(0,_0,_0,_0.75)_100%)] dark:bg-[linear-gradient(180deg,_#FFF_0%,_rgba(255,_255,_255,_0.00)_202.08%)]">
          {subtitle.regular}
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-300 dark:to-blue-500 block sm:inline">
            {subtitle.gradient}
          </span>
        </h2>
        
        <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-300 text-base sm:text-lg px-4">
          {description}
        </p>
        
        <div class="items-center justify-center gap-x-3 space-y-3 sm:flex sm:space-y-0">
          <AnimatedCTAButton href={ctaHref}>{ctaText}</AnimatedCTAButton>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  /* Falling Dots Animation */
  .grid-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .vertical-line {
    position: absolute;
    width: 1px;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(59, 130, 246, 0.03) 20%,
      rgba(59, 130, 246, 0.08) 50%,
      rgba(59, 130, 246, 0.03) 80%,
      transparent 100%
    );
  }

  .falling-dot {
    position: absolute;
    width: 3px;
    height: 3px;
    background: #3b82f6;
    border-radius: 50%;
    left: -1px;
    box-shadow: 0 0 6px #3b82f6, 0 0 12px rgba(59, 130, 246, 0.3);
    animation: fall linear infinite;
    opacity: 0;
  }

  @keyframes fall {
    0% {
      transform: translateY(-10px);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }

  /* Responsive adjustments */
  @media (prefers-reduced-motion: reduce) {
    .falling-dot {
      animation: none;
      opacity: 0.3;
    }
  }
</style>

