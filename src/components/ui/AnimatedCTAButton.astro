---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className, ...props } = Astro.props;
---

<span class="relative inline-block overflow-hidden rounded-full p-[1.5px]">
  <span class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#1e40af_0%,#0056b3_50%,#1e40af_100%)]"></span>
  <div class="inline-flex h-full w-full cursor-pointer items-center justify-center rounded-full bg-white dark:bg-gray-950 text-sm font-medium backdrop-blur-3xl">
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class={`inline-flex rounded-full text-center group items-center w-full justify-center bg-gradient-to-tr from-blue-800/90 via-blue-700/95 to-blue-600/90 dark:from-blue-800/80 dark:via-blue-700/85 text-white dark:text-white border-blue-800 border-[1px] hover:bg-gradient-to-tr hover:from-blue-900/95 hover:via-blue-800/100 hover:to-blue-700/95 dark:hover:from-blue-900/85 dark:hover:via-blue-800/90 transition-all sm:w-auto py-3 px-8 ${className || ''}`}
      {...props}
    >
      <slot />
    </a>
  </div>
</span>